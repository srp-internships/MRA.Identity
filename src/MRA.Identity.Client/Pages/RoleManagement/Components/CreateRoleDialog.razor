@using MRA.Identity.Client.Services.Roles
@using MRA.Identity.Application.Contract.ApplicationRoles.Commands
@inject IRoleService RoleService

<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.Create" Class="mr-3 mb-n1"/>
            @ContentService["Roles:Create"]
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudTextField @bind-Value="_command.RoleName" Label="Имя"/>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="@(Cancel)">@ContentService["Profile:Cancel"]</MudButton>
        <MudButton Color="Color.Primary" OnClick="@(async () => await CreateAsync())">@ContentService["Roles:Create"]</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; } = null!;
    private readonly CreateRoleCommand _command = new();

    private void Cancel()
    {
        MudDialog.Cancel();
    }

    private async Task CreateAsync()
    {
        if (!string.IsNullOrWhiteSpace(_command.RoleName))
        {
            var success = await RoleService.Post(_command);
            if (success)
            {
                MudDialog.Close();
            }
        }
    }

}